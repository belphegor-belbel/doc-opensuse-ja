#: apps_librewriter.xml:309
#, no-c-format
msgid "LibreOffice Styles panel"
msgstr ""

#. Tag: textobject
#: apps_librewriter.xml:317
#, no-c-format
msgid "<phrase>Styles sidebar displaying paragraph formatting options including Default Paragraph Style, Body Text, Heading and other text formatting presets</phrase>"
