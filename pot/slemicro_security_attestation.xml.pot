      "                -t <replaceable>AGENT</replaceable> \\\n"
      "                -u <replaceable>UUID</replaceable> \\\n"
      "                --cert default \\\n"
      "                -c add\n"
      "                [--include <replaceable>PATH_TO_ZIP_FILE</replaceable>]"
msgstr ""

#. Tag: para
#: slemicro_security_attestation.xml:403
#, no-c-format
msgid "Where:"
msgstr ""

#. Tag: para
#: slemicro_security_attestation.xml:408
#, no-c-format
msgid "<replaceable>AGENT</replaceable> is an IP address of the agent to be registered."
msgstr ""

#. Tag: para
#: slemicro_security_attestation.xml:414
#, no-c-format
msgid "<replaceable>UUID</replaceable> is the agent's UUID."
msgstr ""

#. Tag: para
#: slemicro_security_attestation.xml:419
#, no-c-format
msgid "the file passed by the <option>include</option> option is used to deliver secret payload data to the agent. For details, refer to <xref linkend=\"keylime-payload\"/> ."
