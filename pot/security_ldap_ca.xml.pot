#. Tag: title
#: security_ldap_ca.xml:14
#, no-c-format
msgid "Importing TLS server certificates and keys"
msgstr ""

#. Tag: para
#: security_ldap_ca.xml:19
#, no-c-format
msgid "You can manage your CA certificates and keys for &ds389; with the following command line tools: <command>certutil</command> , <command>openssl</command> , and <command>pk12util</command> ."
msgstr ""

#. Tag: para
#: security_ldap_ca.xml:24
#, no-c-format
msgid "For testing purposes, you can use the self-signed certificate that <command>dscreate</command> creates when you create a new &ds389a; instance. Find the certificate at <filename>/etc/dirsrv/slapd-<replaceable>INSTANCE-NAME</replaceable>/ca.crt</filename> ."
msgstr ""

#. Tag: para
#: security_ldap_ca.xml:30
#, no-c-format
msgid "For production environments, it is a best practice to use a third-party certificate authority, such as Let's Encrypt, CAcert.org, SSL.com, or whatever CA you choose. Request a server certificate, a client certificate, and a root certificate."
msgstr ""

#. Tag: para
#: security_ldap_ca.xml:37
#, no-c-format
msgid "Before you can import an existing private key and certificate into the NSS database, you need to create a bundle of the private key and the server certificate. This results in a <filename>*.p12</filename> file."
msgstr ""

#. Tag: title
#: security_ldap_ca.xml:44
#, no-c-format
msgid "<filename>*.p12</filename> file and friendly name"
msgstr ""

#. Tag: para
#: security_ldap_ca.xml:45
#, no-c-format
msgid "When creating the PKCS12 bundle, you must encode <literal>Server-Cert</literal> as the friendly name in the <filename>*.p12</filename> file. Otherwise the TLS connection will fail, because the &ds389; searches for this exact string."
msgstr ""

#. Tag: para
#: security_ldap_ca.xml:51
#, no-c-format
msgid "The friendly name cannot be changed after you import the <filename>*.p12</filename> file into the NSS database."
msgstr ""

#. Tag: para
#: security_ldap_ca.xml:58
#, no-c-format
msgid "Use the following command to create the PKCS12 bundle with the required friendly name:"
msgstr ""

#. Tag: screen
#: security_ldap_ca.xml:61
#, no-c-format
msgid "&prompt.sudo;<command>openssl pkcs12 -export -in <replaceable>SERVER.crt</replaceable></command> \\\n"
      "<command>-inkey <replaceable>SERVER.key</replaceable></command> \\\n"
      "<command>-out <replaceable>SERVER.p12</replaceable> -name Server-Cert</command>"
msgstr ""

#. Tag: para
#: security_ldap_ca.xml:64
#, no-c-format
msgid "Replace <replaceable>SERVER.crt</replaceable> with the server certificate and <replaceable>SERVER.key</replaceable> with the private key to be bundled. Use <option>-out</option> to specify the name of the <filename>*.p12</filename> file. Use <option>-name</option> to set the friendly name, which must be <literal>Server-Cert</literal> ."
msgstr ""

#. Tag: para
#: security_ldap_ca.xml:73
#, no-c-format
msgid "Before you can import the file into the NSS database, you need to obtain its password. The password is stored in the <filename>pwdfile.txt</filename> file in the <filename>/etc/dirsrv/slapd-<replaceable>INSTANCE-NAME/</replaceable></filename> directory."
msgstr ""

#. Tag: para
#: security_ldap_ca.xml:81
#, no-c-format
msgid "Now import the <replaceable>SERVER.p12</replaceable> file into your &ds389a; NSS database:"
msgstr ""

#. Tag: screen
#: security_ldap_ca.xml:85
#, no-c-format
msgid "&prompt.sudo;<command>dsctl <replaceable>INSTANCE_NAME</replaceable> tls remove-cert Self-Signed-CA   pk12util -i <replaceable>SERVER.p12</replaceable></command> \\\n"
      "<command>-d /etc/dirsrv/slapd-<replaceable>INSTANCE-NAME</replaceable>/cert9.db</command>"
msgstr ""

