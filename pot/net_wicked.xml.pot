#, no-c-format
msgid "This object represents a rule in the routing policy database."
msgstr ""

#. Tag: term
#: net_wicked.xml:616
#, no-c-format
msgid "maddress"
msgstr ""

#. Tag: para
#: net_wicked.xml:618
#, no-c-format
msgid "This object represents a multicast address."
msgstr ""

#. Tag: term
#: net_wicked.xml:624
#, no-c-format
msgid "mroute"
msgstr ""

