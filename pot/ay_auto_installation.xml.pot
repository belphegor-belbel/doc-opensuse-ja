#: ay_auto_installation.xml:385
#, no-c-format
msgid "<literal>rootpassword</literal>"
msgstr ""

#. Tag: para
#: ay_auto_installation.xml:390
#, no-c-format
msgid "Password for root user if not specified in &ay; profile"
msgstr ""

