msgstr ""

#. Tag: title
#: ay_auto_installation.xml:195
#, no-c-format
msgid "Command Line Options"
msgstr ""

#. Tag: para
#: ay_auto_installation.xml:196
#, no-c-format
msgid "Adding the command line variable <literal>autoyast</literal> causes <command>linuxrc</command> to start in automated mode. The <command>linuxrc</command> program searches for a configuration file, which should be distinguished from the main control file, in the following places:"
msgstr ""

#. Tag: para
#: ay_auto_installation.xml:204
#, no-c-format
msgid "in the root directory of the initial RAM disk used for booting the system;"
msgstr ""

#. Tag: para
#: ay_auto_installation.xml:210
#, no-c-format
msgid "in the root directory of the boot medium."
msgstr ""

#. Tag: para
#: ay_auto_installation.xml:215
#, no-c-format
msgid "The <command>linuxrc</command> configuration file supports multiple keywords. For a detailed description of how <command>linuxrc</command> works and other keywords, see <xref linkend=\"appendix-linuxrc\"/> . Some of the more common ones are:"
msgstr ""

#. Tag: title
#: ay_auto_installation.xml:222
#, no-c-format
msgid "Keywords for <command>linuxrc</command>"
msgstr ""

#. Tag: para
#: ay_auto_installation.xml:227
#, no-c-format
msgid "Keyword"
msgstr ""

#. Tag: para
#: ay_auto_installation.xml:232
#, no-c-format
msgid "Value"
msgstr ""

#. Tag: para
#: ay_auto_installation.xml:241
#, no-c-format
msgid "<literal>autoupgrade</literal>"
msgstr ""

#. Tag: para
#: ay_auto_installation.xml:246
#, no-c-format
msgid "Initiate an automatic upgrade using &ay;; see <xref linkend=\"CreateProfile-upgrade\"/> ."
msgstr ""

#. Tag: para
#: ay_auto_installation.xml:253
#, no-c-format
msgid "<literal>autoyast</literal>"
msgstr ""

#. Tag: para
#: ay_auto_installation.xml:258
#, no-c-format
msgid "Location of the control file for automatic installation; see <xref linkend=\"Commandline-ay\"/> for details."
msgstr ""

#. Tag: para
#: ay_auto_installation.xml:266
#, no-c-format
msgid "<literal>ifcfg</literal>"
msgstr ""

#. Tag: para
#: ay_auto_installation.xml:271
#, no-c-format
msgid "Configure and start the network. Required if the &ay; is to be fetched from a remote location. See <xref linkend=\"ay-adv-network\"/> for details."
msgstr ""

#. Tag: para
#: ay_auto_installation.xml:307
#, no-c-format
msgid "<literal>insmod</literal>"
msgstr ""

#. Tag: para
#: ay_auto_installation.xml:312
#, no-c-format
msgid "Kernel modules to load"
msgstr ""

#. Tag: para
#: ay_auto_installation.xml:319
#, no-c-format
msgid "<literal>install</literal>"
msgstr ""

#. Tag: para
#: ay_auto_installation.xml:324
#, no-c-format
msgid "Location of the installation directory, for example <literal>install=nfs://192.168.2.1/CDs/</literal> ."
msgstr ""

#. Tag: para
#: ay_auto_installation.xml:332
#, no-c-format
msgid "<literal>instmode</literal>"
msgstr ""

#. Tag: para
#: ay_auto_installation.xml:337
#, no-c-format
msgid "Installation mode, for example <literal>nfs</literal> , <literal>http</literal> etc. (not needed if <literal>install</literal> is set)."
msgstr ""

