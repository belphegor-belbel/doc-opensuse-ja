#. Tag: term
#: libvirt_configuration_gui.xml:847
#, no-c-format
msgid "FAT formatted image"
msgstr ""

#. Tag: listitem
#: libvirt_configuration_gui.xml:848
#, no-c-format
msgid "<screen>&prompt.sudo;mkfs.msdos -C /var/lib/libvirt/images/floppy.img 1440</screen>"
