#. Tag: title
#: adm_sudo.xml:548
#, no-c-format
msgid "Using &sudo; with &xvendor; applications"
msgstr ""

#. Tag: para
#: adm_sudo.xml:549
#, no-c-format
msgid "Starting graphical applications with &sudo; usually results in the following error:"
msgstr ""

#. Tag: screen
#: adm_sudo.xml:553
#, no-c-format
msgid "\n"
      "&prompt.sudo;xterm\n"
      "xterm: Xt error: Can't open display: %s\n"
      "xterm: DISPLAY is not set\n"
      "      "
