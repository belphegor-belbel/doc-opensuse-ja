      "<prompt>&exampleuser_plain;:~ &gt; </prompt>sudo id -un\n"
      "&exampleuser_plain;'s password:\n"
      "root\n"
      "<prompt>&exampleuserII_plain;:~ &gt; </prompt>groups\n"
      "users\n"
