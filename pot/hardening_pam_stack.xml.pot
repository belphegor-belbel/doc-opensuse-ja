#: hardening_pam_stack.xml:46
#, no-c-format
msgid "<command>pam-config</command> Limitations"
msgstr ""

#. Tag: para
#: hardening_pam_stack.xml:47
#, no-c-format
msgid "The <command>pam-config</command> tool can be used to configure the common-{account,auth,password,session} PAM configuration files, which contain global options. These files include the following comment:"
