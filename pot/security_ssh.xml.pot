#: security_ssh.xml:1601
#, no-c-format
msgid "0664"
msgstr ""

#. Tag: para
#: security_ssh.xml:1613
#, no-c-format
msgid "0002"
msgstr ""

#. Tag: para
#: security_ssh.xml:1618
#, no-c-format
msgid "0600"
msgstr ""

#. Tag: para
#: security_ssh.xml:1625
#, no-c-format
msgid "0775"
msgstr ""

