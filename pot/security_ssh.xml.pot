      "&prompt.sudo;<command>ssh-keygen -b 4096 -f \"<replaceable>SSH_HOST_RSA_2022_02</replaceable>\"</command>\n"
      "&prompt.sudo;<command>ssh-keygen -t ed25519 -f \"<replaceable>SSH_HOST_ED25519_2022_02</replaceable>\"</command>"
msgstr ""

