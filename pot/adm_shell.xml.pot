#. Tag: screen
#: adm_shell.xml:744
#, no-c-format
msgid "\"Tux Penguin\" \"2000\" \"\" \"\""
msgstr ""

#. Tag: title
#: adm_shell.xml:821
#, no-c-format
msgid "Using variable substitution"
msgstr ""

#. Tag: para
#: adm_shell.xml:822
#, no-c-format
msgid "Variable substitutions apply a pattern to the content of a variable either from the left or right side. The following list contains the possible syntax forms:"
msgstr ""

#. Tag: term
#: adm_shell.xml:829
#, no-c-format
msgid "<literal>${VAR#pattern}</literal>"
msgstr ""

#. Tag: para
#: adm_shell.xml:832
#, no-c-format
msgid "removes the shortest possible match from the left:"
msgstr ""

#. Tag: screen
#: adm_shell.xml:835
#, no-c-format
msgid "&prompt.user;file=/home/tux/book/book.tar.bz2\n"
      "&prompt.user;echo ${file#*/}\n"
      "home/tux/book/book.tar.bz2"
msgstr ""

#. Tag: term
#: adm_shell.xml:841
#, no-c-format
msgid "<literal>${VAR##pattern}</literal>"
msgstr ""

#. Tag: para
#: adm_shell.xml:844
#, no-c-format
msgid "removes the longest possible match from the left:"
msgstr ""

#. Tag: screen
#: adm_shell.xml:847
#, no-c-format
msgid "&prompt.user;file=/home/tux/book/book.tar.bz2\n"
      "&prompt.user;echo ${file##*/}\n"
      "book.tar.bz2"
msgstr ""

#. Tag: term
#: adm_shell.xml:853
#, no-c-format
msgid "<literal>${VAR%pattern}</literal>"
msgstr ""

