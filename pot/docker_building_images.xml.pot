      "[...]\n"
      "            \"Labels\": {\n"
      "                \"com.suse.sle.base.created\": \"2019-06-20T18:21:37.729383880Z\",\n"
      "                \"com.suse.sle.base.description\": \"Image containing a minimal environment for containers based on SUSE Linux Enterprise Server 15 SP1.\",\n"
