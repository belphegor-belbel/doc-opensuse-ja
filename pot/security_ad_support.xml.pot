#. Tag: term
#: security_ad_support.xml:36
#, no-c-format
msgid "Browsing shared files and directories with SMB"
msgstr ""

#. Tag: para
#: security_ad_support.xml:38
#, no-c-format
msgid "&nautilus; (previously called Nautilus) supports browsing shared resources through SMB."
msgstr ""

#. Tag: term
