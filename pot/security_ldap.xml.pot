      "[localhost]\n"
      "uri = ldaps://localhost <co xml:id=\"co-ldap-server-dsrc-remote-localhost\"/>\n"
      "basedn = dc=example,dc=com\n"
      "binddn = cn=Directory Manager\n"
      "tls_cacertdir = PATH_TO_CERTDIR <co xml:id=\"co-ldap-server-dsrc-remote-cert\"/>"
msgstr ""

#. Tag: para
#: security_ldap.xml:602
#, no-c-format
