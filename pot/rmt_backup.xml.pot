#. Tag: meta
#: rmt_backup.xml:9
#, no-c-format
msgid "Learn how to create and restore a full backup of your SUSE RMT server using detailed procedures for database and repository management"
msgstr ""

#. Tag: title
#: rmt_backup.xml:10
#, no-c-format
msgid "Backing up an &rmt; server"
msgstr ""

#. Tag: date
#: rmt_backup.xml:16
#, no-c-format
msgid "2023-06-02"
msgstr ""

#. Tag: para
#: rmt_backup.xml:23
#, no-c-format
msgid "This chapter explains how to create a backup of your &rmt; server and how to restore from it."
msgstr ""

#. Tag: title
#: rmt_backup.xml:28
#, no-c-format
msgid "Creating a backup"
msgstr ""

#. Tag: para
#: rmt_backup.xml:30
#, no-c-format
msgid "This procedure details how to create a full backup of your &rmt; server. It is assumed that you have an external disk or network share mounted in <filename>/mnt/backup</filename> that serves as a target for the backup."
msgstr ""

#. Tag: para
#: rmt_backup.xml:38
#, no-c-format
msgid "Change to the backup directory."
msgstr ""

#. Tag: screen
#: rmt_backup.xml:41
#, no-c-format
msgid "&prompt.root;<command>cd /mnt/backup</command>"
msgstr ""

#. Tag: para
#: rmt_backup.xml:44
#, no-c-format
msgid "Create a file containing a dump of your SQL database. You need to provide the password you set for the <literal>rmt</literal> database user during the installation."
msgstr ""

#. Tag: screen
#: rmt_backup.xml:49
#, no-c-format
msgid "&prompt.root;<command>mysqldump -u rmt -p rmt &gt; rmt_backup.sql</command>"
msgstr ""

#. Tag: para
#: rmt_backup.xml:52
#, no-c-format
msgid "Optionally, create a copy of your mirrored data."
msgstr ""

#. Tag: screen
#: rmt_backup.xml:55
#, no-c-format
msgid "&prompt.root;<command>mkdir repos</command>\n"
      "&prompt.root;<command>rmt-cli export repos ./repos/</command>"
msgstr ""

#. Tag: title
#: rmt_backup.xml:61
#, no-c-format
msgid "Restoring a backup"
msgstr ""

#. Tag: para
#: rmt_backup.xml:63
#, no-c-format
msgid "This procedure details how to restore your &rmt; server from a backup created in <xref linkend=\"sec-rmt-backup-create\"/> . It is assumed that the backup is mounted in <filename>/mnt/backup</filename> . It is also assumed that you are restoring the server on a newly installed &slsa;."
msgstr ""

#. Tag: para
#: rmt_backup.xml:72
#, no-c-format
msgid "Install and configure the &rmt; server as described in <xref linkend=\"cha-rmt-installation\"/> ."
msgstr ""

#. Tag: para
#: rmt_backup.xml:78
#, no-c-format
msgid "Go to the backup directory."
msgstr ""

#. Tag: screen
#: rmt_backup.xml:81
#, no-c-format
msgid "&prompt.root;<command>cd /mnt/backup/</command>"
msgstr ""

#. Tag: para
#: rmt_backup.xml:84
#, no-c-format
msgid "Use <command>mysql</command> to remove the newly created database and import the data."
msgstr ""

#. Tag: screen
#: rmt_backup.xml:88
#, no-c-format
msgid "&prompt.root;<command>mysql -u rmt -p</command>\n"
      "Enter password:\n"
      "Welcome to the MariaDB monitor.  Commands end with ; or \\g.\n"
      "[...]\n"
      "\n"
      "<prompt>MariaDB [(none)]&gt;</prompt> <command>DROP DATABASE rmt;</command>\n"
      "Query OK, 14 rows affected (0.84 sec)\n"
      "\n"
      "<prompt>MariaDB [(none)]&gt;</prompt> <command>CREATE DATABASE rmt;</command>\n"
      "Query OK, 1 row affected (0.00 sec)\n"
      "\n"
      "<prompt>MariaDB [(none)]&gt;</prompt> <command>use rmt;</command>\n"
      "Database changed\n"
      "\n"
      "<prompt>MariaDB [rmt]&gt;</prompt> <command>source rmt_backup.sql;</command>\n"
      "[...]\n"
      "\n"
      "<prompt>MariaDB [rmt]&gt;</prompt> <command>quit</command>"
msgstr ""

#. Tag: para
#: rmt_backup.xml:108
#, no-c-format
msgid "Optionally, import the exported repositories."
msgstr ""

#. Tag: screen
#: rmt_backup.xml:111
#, no-c-format
msgid "&prompt.root;<command>rmt-cli import repos ./repos/</command>"
msgstr ""

#. Tag: para
#: rmt_backup.xml:114
#, no-c-format
msgid "Synchronize your data and update your repositories."
msgstr ""

#. Tag: screen
#: rmt_backup.xml:117
#, no-c-format
msgid "&prompt.root;<command>rmt-cli sync</command>\n"
      "&prompt.root;<command>rmt-cli mirror</command>"
msgstr ""

