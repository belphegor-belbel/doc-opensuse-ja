#. Tag: title
#: systemd.xml:494
#, no-c-format
msgid "Disabling"
msgstr ""

#. Tag: para
#: systemd.xml:499
#, no-c-format
msgid "<command>systemctl disable <replaceable>MY_SERVICE(S)</replaceable>.service</command>"
msgstr ""

#. Tag: para
#: systemd.xml:504
#, no-c-format
msgid "<command>insserv -r <replaceable>MY_SERVICE(S)</replaceable></command> , <command>chkconfig -d <replaceable>MY_SERVICE(S)</replaceable></command>"
