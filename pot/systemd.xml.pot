#: systemd.xml:448
#, no-c-format
msgid "Commands for enabling and disabling services"
msgstr ""

#. Tag: title
#: systemd.xml:476
#, no-c-format
msgid "Enabling"
msgstr ""

#. Tag: para
#: systemd.xml:481
#, no-c-format
msgid "<command>systemctl enable <replaceable>MY_SERVICE(S)</replaceable></command>"
msgstr ""

#. Tag: para
#: systemd.xml:486
#, no-c-format
msgid "<command>insserv <replaceable>MY_SERVICE(S)</replaceable></command> , <command>chkconfig -a <replaceable>MY_SERVICE(S)</replaceable></command>"
