#: ay_bigfile.xml:14929
#, no-c-format
msgid "<literal>type</literal>"
msgstr ""

#. Tag: para
#: ay_bigfile.xml:14934
#, no-c-format
msgid "String"
msgstr ""

#. Tag: para
#: ay_bigfile.xml:14939
#, no-c-format
msgid ""
"Configuration management name. Currently only <literal>salt</literal> is "
"officially supported."
msgstr ""

#. Tag: para
#: ay_bigfile.xml:14947
#, no-c-format
