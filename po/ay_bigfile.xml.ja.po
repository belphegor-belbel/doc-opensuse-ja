"        &lt;/source&gt;\n"
"        &lt;debug config:type=\"boolean\"&gt;false&lt;/debug&gt;\n"
"        &lt;feedback config:type=\"boolean\"&gt;false&lt;/feedback&gt;\n"
"      &lt;/script&gt;\n"
"    &lt;/ask&gt;tion&gt;\n"
"  &lt;/ask-list&gt;\n"
"&lt;/general&gt;"
msgstr ""

#. Tag: para
#: ay_bigfile.xml:9429
#, no-c-format
msgid "You can verify the answer of a question with a script like this:"
