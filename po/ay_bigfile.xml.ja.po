msgstr ""

#. Tag: para
#: ay_bigfile.xml:11216
#, no-c-format
msgid ""
"Classes represent configurations for groups of target systems. Classes can "
"be assigned to systems."
msgstr ""

#. Tag: title
#: ay_bigfile.xml:11223
#, no-c-format
msgid "Use <literal>autoyast</literal> Boot Option Only"
msgstr ""

#. Tag: para
#: ay_bigfile.xml:11224
#, no-c-format
msgid ""
