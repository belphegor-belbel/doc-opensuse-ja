"\n"
"-a entry,always -S unlink -S rename -S link -S symlink<co xml:id=\"co."
"auctlfsmov\"/>\n"
"\n"
"-a entry,always -S setxattr<co xml:id=\"co.auctlfsea\"/>\n"
"-a entry,always -S lsetxattr\n"
"-a entry,always -S fsetxattr\n"
"-a entry,always -S removexattr\n"
