"[Unit]\n"
"Description=CIFS share from The-Server\n"
"\n"
"[Mount]\n"
"What=//The-Server/Shared-Folder\n"
"Where=/cifs/shared\n"
"Type=cifs\n"
"Options=rw,username=vagrant,password=admin\n"
"\n"
"[Install]\n"
"WantedBy=multi-user.target\n"
"            "
msgstr ""
"\n"
