#. Tag: screen
#: apparmor_profiles.xml:2057
#, no-c-format
msgid ""
"safe /example_rule px,\n"
"safe /example_rule Px,\n"
"safe px /example_rule,\n"
"safe Px /example_rule,"
msgstr ""
"safe /example_rule px,\n"
"safe /example_rule Px,\n"
"safe px /example_rule,\n"
"safe Px /example_rule,"

#. Tag: para
#: apparmor_profiles.xml:2061
#, no-c-format
msgid "and the rule"
msgstr "また、"

#. Tag: screen
#: apparmor_profiles.xml:2064
#, no-c-format
msgid "/example_rule px,"
msgstr "/example_rule px,"

#. Tag: para
#: apparmor_profiles.xml:2065
#, no-c-format
msgid "is the same as any of"
msgstr "上記は、下記のいずれかと同じ意味になります:"

#. Tag: screen
#: apparmor_profiles.xml:2068
#, no-c-format
