#: ay_erb_templates.xml:696
#, no-c-format
msgid ""
"\n"
"&lt;% home_in_sdb = disks.map { |d| d[:device] }.include?(\"sdb\") %&gt;\n"
"\n"
"&lt;partitioning config:type=\"list\"&gt;\n"
"  &lt;drive&gt;\n"
"    ...\n"
"  &lt;/drive&gt;\n"
"  &lt;% if home_in_sdb %&gt;\n"
