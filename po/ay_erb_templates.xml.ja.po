"  &lt;% if with_link %&gt;\n"
"    &lt;interface&gt;\n"
"      &lt;device&gt;&lt;%= with_link[:device] %&gt;&lt;/device&gt;\n"
"      &lt;startmode&gt;auto&lt;/startmode&gt;\n"
"      &lt;bootproto&gt;dhcp&lt;/bootproto&gt;\n"
"      &lt;/interface&gt;\n"
"  &lt;% end %&gt;\n"
"&lt;/interfaces&gt;\n"
"    "
msgstr ""
