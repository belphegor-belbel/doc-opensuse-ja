#. Tag: title
#: ay_12_migrate_15.xml:431
#, no-c-format
msgid "Disabling Btrfs Subvolumes"
msgstr ""

#. Tag: screen
#: ay_12_migrate_15.xml:432
#, no-c-format
msgid ""
"<![CDATA[<partition>\n"
" <mount>/</mount>\n"
" <filesystem config:type=\"symbol\">btrfs</filesystem>\n"
" <size>max</size>\n"
" <subvolumes_prefix>@</subvolumes_prefix>\n"
"</partition>]]>"
msgstr ""

#. Tag: para
#: ay_12_migrate_15.xml:440
#, no-c-format
msgid ""
"As a consequence of the new behavior, the old <tag class=\"element"
"\">btrfs_set_default_subvolume_name</tag> tag is not needed and, therefore, "
"it is not supported anymore."
msgstr ""

#. Tag: title
#: ay_12_migrate_15.xml:448
#, no-c-format
msgid "Btrfs: Disabling Subvolumes"
msgstr ""

#. Tag: para
#: ay_12_migrate_15.xml:449
#, no-c-format
msgid ""
"Btrfs subvolumes can be disabled by setting <tag class=\"element"
"\">create_subvolumes</tag> to <literal>false</literal> . To skip the default "
"<literal>@</literal> subvolume, specify <tag class=\"element"
"\">subvolumes_prefix</tag> ."
msgstr ""

#. Tag: screen
#: ay_12_migrate_15.xml:456
#, no-c-format
msgid ""
"&lt;partition&gt;\n"
" &lt;create_subvolumes config:type=\"boolean\"&gt;false&lt;/"
"create_subvolumes&gt;\n"
" &lt;subvolumes_prefix&gt;&lt;![CDATA[]]&gt;&lt;/subvolumes_prefix&gt;\n"
"&lt;/partition&gt;]]&gt;"
msgstr ""

