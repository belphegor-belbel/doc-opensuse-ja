msgstr ""

#. Tag: title
#: slemicro_transactional_updates.xml:652
#, no-c-format
msgid "Rollback to a working snapshot"
msgstr ""

#. Tag: para
#: slemicro_transactional_updates.xml:654
#, no-c-format
msgid "Reboot your system and select <literal>Start bootloader from a read-only snapshot</literal> ."
msgstr ""

#. Tag: para
#: slemicro_transactional_updates.xml:660
#, no-c-format
msgid "Choose a snapshot to boot. The snapshots are sorted according to the date of creation, with the latest one at the top."
msgstr ""

#. Tag: para
#: slemicro_transactional_updates.xml:666
#, no-c-format
msgid "Log in to your system and check whether everything works as expected. The data written to directories excluded from the snapshots will stay untouched."
msgstr ""

#. Tag: para
#: slemicro_transactional_updates.xml:673
#, no-c-format
msgid "If the snapshot you booted into is not suitable for the rollback, reboot your system and choose another one."
msgstr ""

