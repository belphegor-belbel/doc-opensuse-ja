#: storage_filesystems.xml:1713
#, no-c-format
msgid ""
"blocksize = 4096\n"
"inode_size = 128\n"
"inode_ratio = 8192"
msgstr ""

#. Tag: title
#: storage_filesystems.xml:1719
#, no-c-format
msgid "At the command line:"
msgstr ""

#. Tag: para
#: storage_filesystems.xml:1720
#, no-c-format
msgid ""
"Pass the inode size ( <literal>-I 128</literal> ) and the bytes-per-inode "
