#: storage_nfs.xml:949
#, no-c-format
msgid ""
"&prompt.sudo;firewall-cmd --permanent --add-service=nfs --"
"zone=<replaceable>ACTIVE_ZONE</replaceable>\n"
"firewall-cmd --reload"
msgstr ""
"&prompt.sudo;firewall-cmd --permanent --add-service=nfs --zone=<replaceable>"
"ゾーン名</replaceable>\n"
"firewall-cmd --reload"

#. Tag: para
#: storage_nfs.xml:951
#, no-c-format
msgid ""
