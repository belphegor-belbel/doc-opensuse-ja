#. Tag: screen
#: sle_update_preparation.xml:542
#, no-c-format
msgid "<command>VACUUM FULL</command>;"
msgstr ""

#. Tag: para
#: sle_update_preparation.xml:547
#, no-c-format
msgid "Stop the &postgresql; server:"
msgstr ""

#. Tag: screen
#: sle_update_preparation.xml:550
#, no-c-format
msgid "&prompt.root;<command>systemctl</command> stop postgresql.service"
msgstr ""

#. Tag: para
#: sle_update_preparation.xml:553
#, no-c-format
msgid "Rename your old data directory:"
msgstr ""

#. Tag: screen
#: sle_update_preparation.xml:556
#, no-c-format
msgid "&prompt.root;<command>mv</command> /var/lib/pgsql/data /var/lib/pgsql/data.old"
msgstr ""

#. Tag: para
#: sle_update_preparation.xml:559
#, no-c-format
msgid "Initialize your new database instance either manually with <command>initdb</command> or by starting and stopping PostgreSQL, which does it automatically:"
msgstr ""

#. Tag: screen
#: sle_update_preparation.xml:564
#, no-c-format
