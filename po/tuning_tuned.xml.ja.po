#. Tag: para
#: tuning_tuned.xml:1730
#, no-c-format
msgid ""
"Common parameters and their possible values for the <literal>sysctl</"
"literal> plug-in are summarized below:"
msgstr ""

#. Tag: title
#: tuning_tuned.xml:1735
#, no-c-format
msgid ""
"Understand the impact before modifying <literal>sysctl</literal> parameters"
msgstr ""

#. Tag: para
#: tuning_tuned.xml:1736
#, no-c-format
msgid ""
"Modifying these parameters can considerably impact system behavior. It is "
"crucial to understand their implications before making changes. Consult the "
"official kernel documentation for detailed descriptions."
msgstr ""

#. Tag: para
#: tuning_tuned.xml:1744
#, no-c-format
msgid ""
"<parameter>kernel.hung_task_timeout_secs</parameter> : Time in seconds "
"before a task is considered hung (default: <literal>120</literal> )."
msgstr ""

#. Tag: para
#: tuning_tuned.xml:1750
#, no-c-format
msgid ""
"<parameter>kernel.numa_balancing</parameter> : Enable ( <literal>1</"
"literal> ) or disable ( <literal>0</literal> ) automatic NUMA balancing."
msgstr ""

#. Tag: para
#: tuning_tuned.xml:1756
#, no-c-format
msgid ""
"<parameter>kernel.nmi_watchdog</parameter> : Enable ( <literal>1</literal> ) "
"or disable ( <literal>0</literal> ) the NMI watchdog."
msgstr ""

#. Tag: para
#: tuning_tuned.xml:1762
#, no-c-format
msgid ""
"<parameter>kernel.timer_migration</parameter> : Enable ( <literal>1</"
"literal> ) or disable ( <literal>0</literal> ) timer migration."
msgstr ""

#. Tag: para
#: tuning_tuned.xml:1768
#, no-c-format
msgid ""
"<parameter>kernel.sched_autogroup_enabled</parameter> : Enable ( <literal>1</"
"literal> ) or disable ( <literal>0</literal> ) scheduler autogrouping."
msgstr ""

#. Tag: para
#: tuning_tuned.xml:1774
#, no-c-format
msgid ""
"<parameter>kernel.sched_min_granularity_ns</parameter> : Minimum preemption "
"granularity (in nanoseconds) for CPU-bound tasks."
msgstr ""

#. Tag: para
#: tuning_tuned.xml:1780
#, no-c-format
msgid ""
"<parameter>kernel.sched_migration_cost_ns</parameter> : The time (in "
"nanoseconds) the scheduler considers a migrated process <quote>cache hot</"
"quote> ."
msgstr ""

#. Tag: para
#: tuning_tuned.xml:1786
#, no-c-format
msgid ""
"<parameter>vm.stat_interval</parameter> : Interval between updates of "
"virtual machine statistics (default: <literal>1</literal> )."
msgstr ""

#. Tag: para
#: tuning_tuned.xml:1792
#, no-c-format
msgid ""
"<parameter>vm.dirty_ratio</parameter> : The percentage of system memory that "
"can be filled with dirty pages before the processes must write them to disk."
msgstr ""

#. Tag: para
#: tuning_tuned.xml:1798
#, no-c-format
msgid ""
"<parameter>vm.dirty_background_ratio</parameter> : The percentage of system "
"memory that can be filled with dirty pages before the background writeback "
"process starts writing them to disk."
msgstr ""

#. Tag: para
#: tuning_tuned.xml:1805
#, no-c-format
msgid ""
"<parameter>vm.swappiness</parameter> : The tendency of the kernel to swap "
"out idle processes. A swappiness of <literal>0</literal> instructs the "
"kernel to keep the processes in the main memory for as long as possible."
msgstr ""

#. Tag: para
#: tuning_tuned.xml:1812
#, no-c-format
msgid ""
"<parameter>vm.max_map_count</parameter> : Maximum number of memory map areas "
"a process may have."
msgstr ""

#. Tag: para
#: tuning_tuned.xml:1818
#, no-c-format
msgid ""
"<parameter>net.core.busy_read</parameter> : Number of busy loops for "
"<literal>recvmsg</literal> (default: <literal>50</literal> )."
msgstr ""

#. Tag: para
#: tuning_tuned.xml:1824
#, no-c-format
msgid ""
"<parameter>net.core.busy_poll</parameter> : Number of busy loops for "
"<literal>poll</literal> (default: <literal>50</literal> )."
msgstr ""

#. Tag: para
#: tuning_tuned.xml:1830
#, no-c-format
msgid ""
"<parameter>net.ipv4.tcp_fastopen</parameter> : Enable ( <literal>1</"
"literal> ) or disable ( <literal>0</literal> ) TCP Fast Open."
msgstr ""

#. Tag: para
#: tuning_tuned.xml:1836
#, no-c-format
msgid ""
"<parameter>net.ipv4.tcp_rmem</parameter> : TCP read buffer size (minimum, "
"default and maximum values separated by space)."
msgstr ""

#. Tag: para
#: tuning_tuned.xml:1842
#, no-c-format
msgid ""
"<parameter>net.ipv4.tcp_wmem</parameter> : TCP write buffer size (minimum, "
"default and maximum values separated by space)."
msgstr ""

#. Tag: para
#: tuning_tuned.xml:1848
#, no-c-format
msgid ""
"<parameter>net.ipv4.udp_mem</parameter> : UDP buffer size (minimum, default "
"and maximum values separated by space)."
msgstr ""

#. Tag: para
#: tuning_tuned.xml:1854
#, no-c-format
msgid ""
"<parameter>fs.aio-max-nr</parameter> : Maximum number of allowed concurrent "
"asynchronous I/O requests."
msgstr ""

#. Tag: para
#: tuning_tuned.xml:1860
#, no-c-format
msgid ""
"<parameter>fs.file-max</parameter> : Maximum number of file handles that the "
"Linux kernel allocates."
msgstr ""

#. Tag: para
#: tuning_tuned.xml:1866
#, no-c-format
msgid ""
"<parameter>fs.inotify.max_user_instances</parameter> : Maximum number of "
"<literal>inotify</literal> instances per user."
msgstr ""

#. Tag: para
#: tuning_tuned.xml:1872
#, no-c-format
msgid ""
"<parameter>fs.inotify.max_user_watches</parameter> : Maximum number of "
"<literal>inotify</literal> watches per user."
msgstr ""

#. Tag: para
#: tuning_tuned.xml:1878
#, no-c-format
msgid ""
"<parameter>fs.nr_open</parameter> : Maximum number of file descriptors a "
"process can have."
msgstr ""

#. Tag: para
#: tuning_tuned.xml:1884
#, no-c-format
msgid ""
"<parameter>fs.suid_dumpable</parameter> : Controls whether core dumps are "
"produced for set-user-ID or set-group-ID programs."
msgstr ""

