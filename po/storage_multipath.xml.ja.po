#: storage_multipath.xml:3079
#, no-c-format
msgid "<replaceable>CUSTOM_VENDOR_VALUE</replaceable>"
msgstr ""

#. Tag: para
#: storage_multipath.xml:3084
#, no-c-format
msgid "Some SAN vendors provide custom path_checker options:"
msgstr ""

#. Tag: title
#: storage_multipath.xml:3090
#, no-c-format
msgid "<literal>cciss_tur</literal> :"
msgstr ""

#. Tag: para
#: storage_multipath.xml:3091
#, no-c-format
msgid "Checks the path state for HP Smart Storage Arrays."
msgstr ""

#. Tag: title
#: storage_multipath.xml:3098
#, no-c-format
msgid "<literal>emc_clariion</literal> :"
msgstr ""

#. Tag: para
#: storage_multipath.xml:3099
