#. Tag: para
#: storage_multipath.xml:3329
#, no-c-format
msgid "Value"
msgstr ""

#. Tag: para
#: storage_multipath.xml:3334
#, no-c-format
msgid "Description"
msgstr ""

#. Tag: para
#: storage_multipath.xml:3343
#, no-c-format
msgid "<literal>uniform</literal>"
msgstr ""

#. Tag: para
#: storage_multipath.xml:3348
#, no-c-format
msgid "(Default) All paths have the same round-robin weights."
