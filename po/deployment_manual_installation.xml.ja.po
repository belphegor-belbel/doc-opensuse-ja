"&lt;?xml version=\"1.0\"?&gt;\n"
"&lt;profile xmlns=\"http://www.suse.com/1.0/yast2ns\"\n"
" xmlns:config=\"http://www.suse.com/1.0/configns\"&gt;\n"
"  &lt;suse_register&gt;\n"
"    &lt;addons config:type=\"list\"&gt;\n"
"      &lt;addon&gt;\n"
"&lt;name&gt;SLEMicro&lt;/name&gt;\n"
"&lt;reg_code&gt;cc36aae1&lt;/reg_code&gt;\n"
"      &lt;/addon&gt;\n"
"     &lt;/addons&gt;\n"
"  &lt;/suse_register&gt;\n"
"&lt;/profile&gt;"
msgstr ""

#. Tag: title
#: deployment_manual_installation.xml:497
#, no-c-format
msgid "Limitations"
msgstr ""

#. Tag: para
#: deployment_manual_installation.xml:498
#, no-c-format
msgid ""
"Currently flash disks are only scanned during installation or upgrade, but "
"not when registering a running system."
msgstr ""

