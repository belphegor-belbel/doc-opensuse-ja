#: deployment_manual_installation.xml:475
#, no-c-format
msgid "<filename>regcodes.txt</filename>"
msgstr ""

#. Tag: screen
#: deployment_manual_installation.xml:476
#, no-c-format
msgid ""
"\n"
"SLEMicro    cc36aae1\n"
msgstr ""

#. Tag: title
#: deployment_manual_installation.xml:481
#, no-c-format
msgid "<filename>regcodes.xml</filename>"
msgstr ""

#. Tag: screen
#: deployment_manual_installation.xml:482
#, no-c-format
msgid ""
