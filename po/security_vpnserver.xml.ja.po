#. Tag: screen
#: security_vpnserver.xml:553
#, no-c-format
msgid "&prompt.sudo;<command>wicked ifup tun0</command>"
msgstr ""

#. Tag: para
#: security_vpnserver.xml:554
#, no-c-format
msgid "You should see the confirmation:"
msgstr ""

#. Tag: screen
#: security_vpnserver.xml:557
#, no-c-format
