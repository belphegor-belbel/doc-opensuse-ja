"users:\n"
"- name: <replaceable>USER</replaceable>\n"
"shell: /bin/bash\n"
"groups: users\n"
"ssh_import_id: None\n"
"lock_passwd: true\n"
"sudo: ALL=(ALL) NOPASSWD:ALL\n"
"ssh_authorized_keys:\n"
"- <replaceable>SSH_PUBLIC_KEY_1</replaceable>\n"
"- <replaceable>SSH_PUBLIC_KEY_2</replaceable>"
msgstr ""

