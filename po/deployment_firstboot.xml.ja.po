"            &lt;mode&gt;installation&lt;/mode&gt;<co xml:id=\"co-fb-pmode\"/"
">\n"
"            &lt;stage&gt;firstboot&lt;/stage&gt;<co xml:id=\"co-fb-pstage\"/"
">\n"
"            &lt;label&gt;Hardware Configuration&lt;/label&gt;<co xml:id=\"co-"
"fb-plabel\"/>\n"
"            &lt;proposal_modules config:type=\"list\"&gt;<co xml:id=\"co-fb-"
"pmodl\"/>\n"
"                &lt;proposal_module&gt;printer&lt;/proposal_module&gt;<co "
"xml:id=\"co-fb-pmod\"/>\n"
"            &lt;/proposal_modules&gt;\n"
"        &lt;/proposal&gt;\n"
"        &lt;proposal&gt;\n"
"        &hellip;\n"
"        &lt;/proposal&gt;\n"
"    &lt;/proposals&gt;\n"
"   "
