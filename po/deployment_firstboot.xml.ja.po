#: deployment_firstboot.xml:372
#, no-c-format
msgid "Welcome"
msgstr ""

#. Tag: para
#: deployment_firstboot.xml:378
#, no-c-format
msgid "License Agreement"
msgstr ""

#. Tag: para
#: deployment_firstboot.xml:383
#, no-c-format
msgid "Time and Date"
msgstr ""

#. Tag: para
#: deployment_firstboot.xml:388
#, no-c-format
msgid "Users"
msgstr ""

#. Tag: para
#: deployment_firstboot.xml:393
#, no-c-format
msgid "Root Password"
msgstr ""

#. Tag: para
#: deployment_firstboot.xml:398
#, no-c-format
msgid "Finish Setup"
msgstr ""

#. Tag: para
#: deployment_firstboot.xml:403
#, no-c-format
msgid ""
"Bear in mind that this workflow is just a template. You may adjust it "
"properly, manually editing the firstboot configuration file <filename>/etc/"
